# Flask settings
FLASK_ENV=production
LOG_LEVEL=INFO   # Default INFO level
# LOG_LEVEL=WARNING  # For less verbose logging
# LOG_LEVEL=ERROR    # For minimal logging (errors only)
FLASK_DEBUG=0
FLASK_APP=app.py
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000

# Database (use a persistent/production DB)
DATABASE_URL=sqlite:///data/prod.db

# Strong secret key for production
SECRET_KEY=replace-with-a-strong-secret-key

# Path to Excel data (if needed)
DATA_PATH=./data

# Any other production-specific settings
